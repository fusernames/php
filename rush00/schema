index.php
install.php
controller/
	cartController.php
		addToCart()
		removeCart()
		showCart()
	userController.php
		listUsers()				-> manageUsers.php
		editUser()				-> editUser.php
		addUser()				-> create.php
		login()					-> login.php
		logout()				-> logout.php
	articleController.php
		showArticle()			-> article.php?id=x
		listArticles()
		addArticle()
		removeArticle()			-> manageArticles.php
	categoryController.php
		addCategory()			-> manageCategories.php
		removeCategory()		-> manageCategories.php
		listCategories()		-> manageCategories.php
	orderController.php
		addOrder()
		removeOrder()
	adminController.php
		promote()
		demote()
