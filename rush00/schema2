
index.php
install.php
controller/
	indexController.php
		showIndex()				-> index.php
	cartController.php
		addCart()
		addToCart()
		removeCart()
		showCart()				-> cart.php
	userController.php
		removeUser()
		editUser()				-> edit_user.php
		addUser()				-> create.php
		login()					-> login.php
		logout()				-> logout.php
	articleController.php
		showArticle()			-> article.php?id=x
		listArticles()			-> articles.php
		addArticle()
		removeArticle()
	categoryController.php
		addCategory()
		editCategory()
		removeCategory()
	orderController.php
		addOrder()				-> orders.php
		removeOrder()			-> orders.php
	adminController.php
		showAdmin()				-> admin.php
		manageArticles()		-> manage_articles.php
		manageUsers()			-> manage_users.php
		manageCategories()		-> manage_categories.php
		promote()
		demote()
